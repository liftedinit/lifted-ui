{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src",
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "**/*.d.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/*.test.ts",
    "**/__tests__/**/*"
  ]
}
